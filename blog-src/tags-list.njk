---
pagination:
  data: collections.tagList
  size: 1
  alias: tag
permalink: /blog/tags/{{ tag | slug }}/
layout: layout.njk
title: "Posts tagged '{{ tag }}'"
description: "All blog posts tagged with {{ tag }}"
---

<h2>Posts tagged "{{ tag }}"</h2>

<ul class="post-list">
  {% set taggedPosts = collections[tag] | reverse %}
  {% for post in taggedPosts %}
    <li class="post-item">
      <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
      <div class="post-meta">
        <time datetime="{{ post.date.toISOString() }}">{{ post.date | dateDisplay }}</time>
      </div>
      {% if post.data.description %}
        <p>{{ post.data.description }}</p>
      {% else %}
        <p>{{ post.templateContent | excerpt(200) }}</p>
      {% endif %}
      <a href="{{ post.url }}">Read more →</a>
    </li>
  {% endfor %}
</ul>

<p><a href="/blog/tags/">← View all tags</a></p>
