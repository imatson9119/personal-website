---
pagination:
  data: collections.tagList
  size: 1
  alias: tag
permalink: /blog/tags/{{ tag | slug }}/
layout: layout.njk
title: "Posts tagged '{{ tag }}'"
description: "All blog posts tagged with {{ tag }}"
---

<h2>Posts tagged "{{ tag }}"</h2>

{% set taggedPosts = collections[tag] | filterDrafts | reverse %}
{% if taggedPosts.length > 0 %}
  <ul class="post-list">
    {% for post in taggedPosts %}
      <li class="post-item">
        <div class="post-item-image">
          {% if post.data.image %}
            <div class="post-preview-image">
              <a href="{{ post.url }}">
                <img src="{{ post.data.image }}" alt="{{ post.data.title }}" />
              </a>
            </div>
          {% endif %}
        </div>
        
        <div class="post-item-content">
          <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
          <div class="post-meta">
            <time datetime="{{ post.date.toISOString() }}">{{ post.date | dateDisplay }}</time>
            {% if post.data.tags and post.data.tags.length > 0 %}
              <span> • </span>
              {% for postTag in post.data.tags %}
                {% if postTag != "posts" %}
                  <a href="/blog/tags/{{ postTag | slug }}/" class="tag">#{{ postTag }}</a>
                {% endif %}
              {% endfor %}
            {% endif %}
          </div>
          {% if post.data.description %}
            <p class="post-description">{{ post.data.description }}</p>
          {% else %}
            <p class="post-description">{{ post.templateContent | excerpt(200) }}</p>
          {% endif %}
          <a href="{{ post.url }}">Read more →</a>
        </div>
      </li>
    {% endfor %}
  </ul>
{% else %}
  <div style="text-align: center; padding: 3rem; color: #666;">
    <h2>No posts found</h2>
    <p>No posts with this tag yet.</p>
  </div>
{% endif %}

<p><a href="/blog/tags/">← View all tags</a></p>
